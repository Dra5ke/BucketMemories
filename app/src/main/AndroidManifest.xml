<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bucketnotes.bucketmemories">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.bucketnotes.bucketmemories.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:windowSoftInputMode="adjustPan|stateAlwaysHidden" android:name="com.example.bucketnotes.bucketmemories.CreateTaskActivity"/>
        <activity android:name="com.example.bucketnotes.bucketmemories.CategoryActivity" />
        <activity android:name="com.example.bucketnotes.bucketmemories.MainActivity" />
        <activity
            android:name="com.example.bucketnotes.bucketmemories.TaskActivity"
            android:label="@string/title_activity_task"
            android:parentActivityName="com.example.bucketnotes.bucketmemories.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bucketnotes.bucketmemories.MainActivity" />
        </activity>
    </application>
</manifest>